%h1 Notifo auth

= form_for @user, :url => "/notifo/auth" do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :notifo_username
    = f.text_field :notifo_username
  .actions
    = f.submit 'Save'

= link_to 'Back', user_path